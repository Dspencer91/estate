<%= simple_form_for @property do |f| %>
    
  <div class="form-group">
    <%= f.input :name %>
  </div>

  <div class="form-group">
    <%= f.input :address %>
  </div>

  <div class="form-group">
    <%= f.input :price %>
  </div>

  <div class="form-group">
    <%= f.input :rooms %>
  </div>

  <div class="form-group">
    <%= f.input :bathrooms %>
  </div>

  <div class="form-group">
    <%= f.input :photo, class: "form-control" %>
    <%= f.input :photo_cache %>

    <% if @property.photo.present? %>
      <%= image_tag @property.photo.thumb %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Property", class: "btn btn-success" %>
  </div>

<% end %>
